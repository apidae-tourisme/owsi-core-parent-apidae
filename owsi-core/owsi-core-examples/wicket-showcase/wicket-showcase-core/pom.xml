<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>wicket-showcase</artifactId>
		<groupId>fr.smile.core.showcase</groupId>
		<version>0.24-SNAPSHOT</version>
	</parent>

	<artifactId>wicket-showcase-core</artifactId>

	<name>OWSI Core - Wicket Showcase Core</name>

	<dependencies>
		<dependency>
			<groupId>fr.smile.core.packages</groupId>
			<artifactId>owsi-core-package-core-spring-jpa-app</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
		</dependency>

		<!-- Pooling -->

		<dependency>
			<groupId>org.apache.tomcat</groupId>
			<artifactId>tomcat-jdbc</artifactId>
			<scope>provided</scope>
		</dependency>

		<!-- Test dependencies -->

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<scope>test</scope>
		</dependency>

		<!-- H2 database -->
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>${h2database.version}</version>
		</dependency>

		<!-- Java API for Google geocoder v3 -->
		<dependency>
			<groupId>com.google.code.geocoder-java</groupId>
			<artifactId>geocoder-java</artifactId>
			<version>${google-geocoder.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>commons-logging</artifactId>
					<groupId>commons-logging</groupId>
				</exclusion>
			</exclusions>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<profiles>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<profile.filter.file>src/main/filters/development.properties</profile.filter.file>
			</properties>
		</profile>
	</profiles>

	<build>
		<filters>
			<filter>${profile.filter.file}</filter>
		</filters>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/excel</directory>
				<filtering>false</filtering>
			</resource>
		</resources>

		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</testResource>
		</testResources>

		<plugins>
			<plugin>
				<groupId>org.bsc.maven</groupId>
				<artifactId>maven-processor-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<repositories>
			<repository>
					<id>bucket-release-repo</id>
					<url>https://apidae-sit-packages.s3.eu-west-3.amazonaws.com/release</url>
			</repository>
	</repositories>
</project>
